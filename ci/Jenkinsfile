pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }

    stages {
        stage('maven'){
            environment {
                STUDENTDATA_SECRET = credentials('STUDENTDATA_SECRET')
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
    }
}